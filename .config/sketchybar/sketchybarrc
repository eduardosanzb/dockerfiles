           --set mem_usage icon=üíæ script="sketchybar --set mem_usage label=\$RAM_USED" \
           --subscribe mem_usage system_stats \
           --add item cpu_temp right \
           --set cpu_temp icon=üî• script="sketchybar --set cpu_temp label=\$CPU_TEMP" \
